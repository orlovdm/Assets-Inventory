@model Assets_Inventory.Models.Asset

<div class="modal-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="AssetLabel">Удаление объекта основных средств - @Model.Inv_id</h4>
        </div>
        <div class="modal-body">
            <div class="alert alert-warning">Вы действительно желаете удалить объект @Model.Inv_id из активных основных средств?</div>            
            <div class="form-group">
                @Html.Label("Notes", "Укажите причину")
                @Html.TextArea("Notes", new { @class = "form-control" })
            </div>
        </div>
        <div class="modal-footer">
            <div class="form-group">
                <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    }
</div>
